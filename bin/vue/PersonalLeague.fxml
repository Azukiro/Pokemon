<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane fx:id="root"  maxHeight="400.0" maxWidth="600.0" minHeight="400" minWidth="600" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controler.PersonnalLeagueController">
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="League's name"  />
            <TextField fx:id="label"/>
         </children>
      </HBox>
   </top>
   <center>
      <VBox fx:id="vBox" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </center>
   <left>
      <Button mnemonicParsing="false" text="Add Trainer" BorderPane.alignment="CENTER" onAction="#Add" />
   </left>
   <bottom>
      <Button mnemonicParsing="false" text="Save League" BorderPane.alignment="CENTER" onAction="#Save"/>
   </bottom>
   <right>
      <Button mnemonicParsing="false" text="Return Menu" BorderPane.alignment="CENTER" onAction="#Menu"/>
   </right>
</BorderPane>
